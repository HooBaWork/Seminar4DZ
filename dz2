//принимает на вход число и выдает сумму цифр в числе
 int result(int A)
 {
    int sum = 0;
    while (A > 0)
    {
 
                sum = sum + A % 10;
                A = A /10 ;
 
    }
    return sum;
 }

Console.Clear();
Console.WriteLine($"Введите число:");
int A = int.Parse(Console.ReadLine()!);
Console.WriteLine(result(A));
